{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "paths": {
      "@cross-nn/*": ["./packages/*"]
    },
    "lib": ["es2015"]
  },
  "include": [
    "packages/**/*"
  ]
}
